<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    android:id="@+id/details_donner_Fragment"
    android:layout_margin="6dp"
    android:elevation="60dp"
    android:background="@color/colorWhiteDark"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardCornerRadius="20dp"
        android:layout_margin="6dp"
        android:elevation="60dp"
        android:background="@color/colorWhiteDark"

        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_layout_bg_color">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >
    <TextView
        android:id="@+id/d_BloodGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/big_round_circle"
        android:gravity="center"
        android:text="O+"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryText"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="100sp"
        />
    <TextView
        android:id="@+id/d_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Muhammad Yaseen "
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="36sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/d_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yasinayub7172@gmail.com"
        android:layout_marginTop="30sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryText"
        android:textSize="15sp"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:layout_marginStart="7sp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
            android:id="@+id/d_usercity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17sp"
            android:text="Lahore"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp"
            android:textStyle="bold"
        android:layout_marginTop="20sp"
            />
        <TextView
            android:id="@+id/d_usercountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pakistan"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:layout_marginStart="5sp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/d_number"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7sp"
        android:text="03048996421"
        android:drawableRight="@drawable/ic_baseline_phone_24"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/title"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/blood_donnor"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="50sp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/logo"/>
    <TextView
        android:id="@+id/save"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/save"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/savelogo"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Developed By : Muhammad Yaseen"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"

        />

</LinearLayout>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>