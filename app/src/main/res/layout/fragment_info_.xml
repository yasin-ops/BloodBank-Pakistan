<?xml version="1.0" encoding="utf-8"?>
<com.amar.library.ui.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/info_Fragment"
    app:stickyFooter="@+id/buttons"
    app:stickyHeader="@+id/title"

    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E3E0E0"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="5 Amazing Facts About Your Blood Type"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/other_product1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:padding="15dp">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/a"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:textAlignment="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|1| People with type O blood are less susceptible to malaria."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic|bold"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/b"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:textAlignment="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|2| People with type O blood are the least likely to suffer from cardiovascular issues."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic|bold"
                />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/c"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:textAlignment="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|3| People with type A blood are more likely to develop stomach cancer"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic|bold"
                />


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/d"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:textAlignment="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|4| And all non-O blood types are at an elevated risk of pancreatic cancer."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic|bold"
                />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/f"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:textAlignment="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|5| People with type AB blood are much more likely to develop cognitive issues."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic|bold"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer Information"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MuhammadYaseen"
                android:textStyle="italic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software Engineer (Android Developer)"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/backtoHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#535766"
                android:drawableLeft="@drawable/home"
                android:gravity="center"
                android:padding="15dp"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/b_log_out"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0BC6A0"
                android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
                android:gravity="center"
                android:maxLines="1"
                android:text="Logout"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</com.amar.library.ui.StickyScrollView>